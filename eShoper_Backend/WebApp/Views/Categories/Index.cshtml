@model IEnumerable<WebApp.Models.MaintenanceViewModels.CategoryMaintenance>
@using WebApp.Models.CommonViewModels
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Maintenance/_Layout.cshtml";
}

<table class="table table-sm table-bordered table-hover table-striped">
    <thead class="bg-primary">
        <tr>
            <th>Code</th>
            <th>Category</th>
            <th>Parent Category</th>
            <th>Products</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var row in Model)
        {
            <tr>
                <td>@row.CategoryCode</td>
                <td>@row.CategoryName</td>
                <td>@row.ParentCategoryName</td>
                <td>(@row.NumberOfProducts)</td>
            </tr>
        }
    </tbody>
</table>

@section MaintenanceSection{
    @await Html.PartialAsync("_MaintenanceHeaderPartial", (KeyValue)ViewBag.MaintenanceHeader)
}


